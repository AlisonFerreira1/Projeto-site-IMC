<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--CRIEI ESSA CALCULADORA BASE PARA AUXILIAR NO PROJETO-->
    <title>Calculadora de IMC</title>
    <script type="text/javascript">
        const calculaImc = () => {
          const altura = document.imcForm.elements["altura"].value;
          const peso = document.imcForm.elements["peso"].value;
        const imc = peso / (altura * altura);
         if(imc < 18.5){
            alert("abaixo do peso")
         }
         else if (imc >= 18.5 && imc <24.9) {
            alert("normal");
         }
         else if(imc >= 25 && imc < 29.9){
            alert("sobrepeso");
         }
         else if(imc >= 30 && imc <34.9){
            alert("obesidade");
         }
         else if(imc >= 35 && imc <40){
            alert("obesidade mórbida grave");
         }
         else if (imc > 40){
            alert("obesidade mórbida muito grave");
         }
        }
    </script>
</head>
<body>
  <form id="imcForm" name="imcForm" action="imc2.js">
    <label for="altura">Digite a altura:</label>
    <input type="text" id="altura" name="altura"><br><br>
    <label for="peso">Digite o peso:</label>
    <input type="text" id="peso" name="peso"><br><br>

    <input type="submit" value="Calcular" onclick="calculaImc()">
    

  </form>  
</body>
</html>
